{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rp",
  "version": "0.2.1",
  "identifier": "com.rp.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "rp",
        "width": 1920,
        "height": 1080
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Manas Pratim Biswas",
    "copyright": "Copyright © 2024 Manas Pratim Biswas",
    "category": "DeveloperTool",
    "shortDescription": "A memoir to my love",
    "longDescription": "A memoir to my love, wait, hope, despair, anger and apathy, with ❤️ for love",
    "license": "AGPL-3.0-only"
  }
}